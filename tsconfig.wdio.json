{
  "compilerOptions": {
    "outDir": "./.tsbuild/",
    "sourceMap": false,
    "target": "es2019",
    "module": "commonjs",
    "removeComments": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "types": ["node", "webdriverio/async", "@wdio/mocha-framework", "chai"]
  },
  "include": [
    "packages/@featherds/*/e2e/**/*.ts",
    "packages/@featherds/*/wdio/**/*.ts"
  ]
}
