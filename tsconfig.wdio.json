{
  "compilerOptions": {
    "outDir": "./.tsbuild/",
    "sourceMap": false,
    "target": "es2019",
    "module": "ESNext",
    "removeComments": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "types": [
      "node",
      "@wdio/globals/types",
      "@wdio/mocha-framework",
      "chai",
      "mocha"
    ]
  },
  "include": [
    "packages/@featherds/*/e2e/**/*.ts",
    "packages/@featherds/*/wdio/**/*.ts",
    "wdio.*.ts"
  ]
}
